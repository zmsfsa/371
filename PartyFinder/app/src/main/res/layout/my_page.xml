<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent" android:layout_height="match_parent"
android:gravity="center_horizontal">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#fe4f4f50">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:id="@+id/ivFace"
            android:focusableInTouchMode="false" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/tvName"
                android:textColor="#feffffff"
                android:textSize="24dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/llllllllllllll"
                android:baselineAligned="false">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phone:"
                        android:textSize="16dp"
                        android:id="@+id/tvPhoned"
                        android:textColor="#fefdfdfd" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvPhone"
                        android:textSize="16dp"
                        android:textColor="#feffffff" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Birth date:"
                    android:textSize="17dp"
                    android:id="@+id/tvBirth1"
                    android:autoText="false"
                    android:textColor="#fef9f9f9" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tvBirth"
                    android:textSize="17dp"
                    android:textColor="#feffffff" />

            </LinearLayout>

            <Button
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:text="Change photo"
                android:id="@+id/btAdd"
                android:textStyle="normal"
                android:textSize="15dp"
                android:textColor="#fe0f0f0f"
                android:background="@drawable/grey_btn_background"
                android:layout_marginTop="5dp" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/leftL"></LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="4dp"
                android:layout_height="match_parent"></LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/rightL"></LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

</RelativeLayout>