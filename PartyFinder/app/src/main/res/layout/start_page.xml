<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".enter_page"
    android:background="@mipmap/people"
    android:id="@+id/enter_page"
    android:focusable="true">

    <Button
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:text="Зарегистрироваться"
        android:id="@+id/button_reg"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp"
        android:textColor="#ffffff"
        android:clickable="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:text="Войти"
        android:id="@+id/button_enter"

        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/button_reg"
        android:layout_alignEnd="@+id/button_reg"
        android:layout_marginBottom="31dp"
        android:background="#2b75d6"
        android:onClick="clickreg"
        android:textColor="#ffffff"
        android:clickable="true" />

</RelativeLayout>